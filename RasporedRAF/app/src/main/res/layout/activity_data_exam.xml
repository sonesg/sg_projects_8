<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridView
        android:id="@+id/gridViewExam"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="1"
        android:stretchMode="columnWidth"
        android:gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/empty_adapter_exam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nema_podataka"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/ibmplexserif_medium"
        android:textColor="@android:color/black"
        android:gravity="center_horizontal"
        android:layout_margin="7dp"
        android:textSize="18sp"
        android:visibility="gone"/>

    <Button
        android:layout_below="@+id/empty_adapter_exam"
        android:id="@+id/startService_exam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/ibmplexserif_medium"
        android:textColor="@android:color/black"
        android:text="@string/u_itaj_podatke"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/progressBarData_exam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

</RelativeLayout>