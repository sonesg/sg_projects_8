<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="horizontal"
    android:minHeight="?android:attr/listPreferredItemHeight">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/border_for_images"
        android:layout_gravity="center"
        android:gravity="center">


    <ImageView
        android:id="@+id/image_from_url"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_margin="7dp"
        android:gravity="center"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

        <ProgressBar
            android:id="@+id/loading_indicator_img"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"/>
</FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="3dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:gravity="top"
            android:maxLines="4"
            android:textAllCaps="true"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            tools:text="Title for our first new and this title will be long" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="6"
            android:textSize="13sp"
            android:textColor="@color/almost_black"
            tools:text="Researchers from the University of Washington have developed the very first battery-free phone. Its sound quality is pretty shitty, but imagine not having to charge your phone because" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/author"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:textColor="#000000"
                android:maxLines="3"
                android:layout_marginRight="3dp"
                android:textSize="12sp"
                tools:text="Aleks Kang" />

            <TextView
                android:id="@+id/time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:textColor="#000000"
                android:layout_marginLeft="3dp"
                android:textSize="12sp"
                tools:text="2017-07-08T12:01:30Z" />
            </LinearLayout>

    </LinearLayout>

    '<!--' ellipsize-korisna stvar da kad imamo veliki text da stane samo onoliko koliko moze i stave se tri tacke '-->'






</LinearLayout>