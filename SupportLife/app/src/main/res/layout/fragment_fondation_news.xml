<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.podrzizivot.project.fragments.FondationNewsFragment">


    <FrameLayout
        android:id="@+id/frame_kids"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true">

        <ProgressBar
            android:id="@+id/progress_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/news_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

        </android.support.v7.widget.RecyclerView>

    </FrameLayout>

    <ImageView
        android:id="@+id/image_no_network"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:contentDescription="@string/image_no_net"
        android:src="@drawable/no_network_btn"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/text_no_network"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_no_network"
        android:layout_alignStart="@+id/image_no_network"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="@string/no_network_connections"
        android:textStyle="italic"
        android:visibility="invisible" />

</RelativeLayout>
