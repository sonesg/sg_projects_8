<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nebojsa.notepad">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.nebojsa.notepad.CatalogActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.nebojsa.notepad.EditorActivity"
            android:theme="@style/EditorTheme"
            android:parentActivityName="com.example.nebojsa.notepad.CatalogActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nebojsa.notepad.CatalogActivity" />
        </activity>
        <provider
            android:name="com.example.nebojsa.notepad.data.PetProvider"
            android:authorities="com.example.nebojsa.notepad"
            android:exported="false" />
    </application>

</manifest>