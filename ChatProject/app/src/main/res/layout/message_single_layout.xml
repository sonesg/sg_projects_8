<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/message_single_layout">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:src="@drawable/img_avatar"
        android:id="@+id/message_profile_image" />

    <TextView
        android:id="@+id/message_single_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/message_profile_image"
        android:background="@drawable/message_background_r"
        android:padding="7dp"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/message_single_text"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/message_single_text"
        android:text="time" />

    <ImageView
        android:id="@+id/imageViewChatMessaging"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="20dp"
        android:padding="7dp"
        android:visibility="invisible"
        android:layout_toEndOf="@+id/message_profile_image"
        android:scaleType="centerCrop" />


</RelativeLayout>